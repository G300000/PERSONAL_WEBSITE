@{
    ViewData["Title"] = "About";
}

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 70vh;">

    <!-- Avatar / Photo -->
    <img src="~/images/me.jpg" alt="My Avatar" 
         style="width:200px; height:200px; object-fit:cover; border-radius:50%; box-shadow:0 0 15px rgba(0,0,0,0.5);">

    <!-- Name -->
    <h2 class="mt-3 text-center">Hi, I'm Sheun</h2>

    <!-- Short Introduction -->
    <p class="text-center">Welcome to my personal website built using ASP.NET MVC 😊</p>

    <!-- Optional Details: Centered -->
    <div class="mt-4 text-center">
        <h4>About Me:</h4>
        <ul class="list-unstyled">
            <li>📌 Future Cybersecurity & Computer Science student</li>
            <li>📌 Passionate about coding, electronics, and MVC apps</li>
            <li>📌 Skills: Java, C#, ASP.NET MVC, PIC Microcontrollers</li>
            <li>📌 Hobbies: Gaming, music, tech projects</li>
        </ul>
    </div>

</div>

<!-- Optional CSS for About page -->
<style>
    /* Fade-in animation */
    .text-center, ul {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    ul {
        list-style-type: square;
        padding-left: 0; /* Remove left indent */
    }

    li {
        margin-bottom: 5px;
        font-size: 16px;
    }
</style>
