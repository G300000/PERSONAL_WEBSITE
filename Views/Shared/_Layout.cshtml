<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Personal Website</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%; /* ensure full viewport height */
            margin: 0;
        }

        body.dark-mode {
            background-color: #121212;
            color: #f0f0f0;
        }

        body.dark-mode a.nav-link {
            color: #f0f0f0 !important;
        }

        body.dark-mode .navbar-dark {
            background-color: #1e1e1e;
        }

        body.dark-mode footer {
            background-color: #1e1e1e;
        }

        main {
            flex: 1 0 auto; /* make main content grow to fill space */
        }
    </style>
</head>
<body class="d-flex flex-column">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container d-flex justify-content-between align-items-center w-100">
            <!-- Left: My Website -->
            <a class="navbar-brand" href="/">My Website</a>

            <!-- Center: Home / About / Contact -->
            <div class="mx-auto">
                <a class="nav-link d-inline text-white mx-2" href="/">Home</a>
                <a class="nav-link d-inline text-white mx-2" href="/Home/About">About</a>
                <a class="nav-link d-inline text-white mx-2" href="/Contact">Contact</a>
            </div>

            <!-- Right: Dark Mode Button -->
            <div>
                <button id="darkModeBtn" class="btn btn-secondary">Dark Mode</button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="d-flex flex-column justify-content-center align-items-center flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-auto">
        © 2025 My Personal Website
    </footer>

    <!-- Scripts -->
    <script>
        (function () {
            const toggleBtn = document.getElementById("darkModeBtn");
            const body = document.body;

            if (localStorage.getItem("dark-mode") === "1") {
                body.classList.add("dark-mode");
                toggleBtn.textContent = "Light Mode";
            }

            toggleBtn.addEventListener("click", function () {
                body.classList.toggle("dark-mode");

                if (body.classList.contains("dark-mode")) {
                    toggleBtn.textContent = "Light Mode";
                    localStorage.setItem("dark-mode", "1");
                } else {
                    toggleBtn.textContent = "Dark Mode";
                    localStorage.setItem("dark-mode", "0");
                }
            });
        })();
    </script>
</body>
</html>
